{
  "metadata": [
    {
      "properties": {
        "TargetFramework": "netstandard2.0"
      },
      "src": [
        {
          "src": "..",
          "files": [
            "Badeend.Error/Badeend.Error.csproj",
            "Badeend.Result/Badeend.Result.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "rendered/**",
          "filterConfig.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "rendered",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "Result",
      "_appTitle": "Result",
      "_appLogoPath": "images/logo-header.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_disableToc": false,
      "_gitContribute": {
        "repo": "https://github.com/badeend/Result",
        "branch": "main"
      },
      "pdf": false
    }
  }
}